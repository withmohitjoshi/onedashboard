{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "current"
        },
        "modules": false
      }
    ]
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "@routes": "./src/routes",
          "@utils": "./src/utils",
          "@controllers": "./src/controllers",
          "@models": "./src/models"
        },
        "extensions": [".js", ".json"]
      }
    ],
    [
      "babel-plugin-add-import-extension",
      {
        "extension": "js"
      }
    ]
  ]
}
