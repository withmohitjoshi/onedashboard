{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@controllers": ["src/controllers"],
      "@controllers/*": ["src/controllers/*"],
      "@middlewares": ["src/middlewares"],
      "@middlewares/*": ["src/middlewares/*"],
      "@models": ["src/models"],
      "@models/*": ["src/models/*"],
      "@routes": ["src/routes"],
      "@routes/*": ["src/routes/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"]
    },
    "module": "ESNext",
    "target": "ES2020",
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
